<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="vertical"
    tools:context="kuch.inteavuth.com.a5healthtrick.rate_us">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="8dp"
            android:text="@string/ratePage"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:padding="8dp"
            android:text="@string/suggestion"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_submit_suggestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:onClick="suggestionSubmit"
            android:text="Submit" />

        <EditText
            android:id="@+id/suggestion_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/button_submit_suggestion"
            android:background="@drawable/my_sharp"
            android:gravity="top|left"
            android:inputType="textMultiLine"
            android:lines="10"
            android:maxLines="10"
            android:minLines="6"
            android:scrollbars="vertical" />

    </RelativeLayout>

</LinearLayout>
